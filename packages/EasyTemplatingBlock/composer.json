{
    "name": "eonx-com/easy-templating-block",
    "description": "Allow to dynamically render blocks in templating engines",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "eonx-com/easy-utils": "^6.2",
        "symfony/config": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/http-kernel": "^7.0",
        "twig/twig": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyTemplatingBlock\\": "src",
            "EonX\\EasyTemplatingBlock\\Bundle\\": "bundle"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyTemplatingBlock\\Tests\\": "tests",
            "EonX\\EasyTemplatingBlock\\Tests\\Unit\\": "tests/Unit/src",
            "EonX\\EasyTemplatingBlock\\Tests\\Unit\\Bundle\\": "tests/Unit/bundle"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.2-dev"
        }
    }
}
