{
    "name": "eonx-com/easy-api-token",
    "description": "Make your API accept multiple authentication strategies in a convenient way (Basic, ApiKey, JWT, ...)",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-openssl": "*",
        "nette/utils": "^3.2"
    },
    "require-dev": {
        "auth0/auth0-php": "^8.6",
        "eonx-com/easy-utils": "5.0-dev",
        "firebase/php-jwt": "^6.5",
        "guzzlehttp/psr7": "^2.5",
        "laravel/lumen-framework": "^9.1",
        "phpseclib/phpseclib": "^3.0",
        "phpunit/phpunit": "^9.6 || ^10.2",
        "psr/container": "^2.0",
        "symfony/cache": "^6.3",
        "symfony/config": "^6.3",
        "symfony/dependency-injection": "^6.3",
        "symfony/http-client": "^6.3",
        "symfony/security-bundle": "^6.3",
        "symfony/yaml": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyApiToken\\": "src",
            "EonX\\EasyApiToken\\Bridge\\Symfony\\": "src/Bridge/Symfony"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyApiToken\\Tests\\": "tests"
        }
    },
    "suggest": {
        "auth0/auth0-php": "To use the Auth0 JWT driver to decode/encode tokens",
        "firebase/php-jwt": "To use the Amazon Cognito or the Firebase JWT driver to decode/encode tokens",
        "phpseclib/phpseclib": "To use the Amazon Cognito JWT driver to decode/encode tokens"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-5.x": "5.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
