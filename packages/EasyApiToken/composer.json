{
    "name": "eonx-com/easy-api-token",
    "description": "Make your API accept multiple authentication strategies in a convenient way (Basic, ApiKey, JWT, ...)",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^7.2 || ^8.0",
        "nette/utils": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4 || ^9.5",
        "firebase/php-jwt": "^5.0",
        "eonx-com/easy-utils": "^3.4.29",
        "auth0/auth0-php": "^5.4 || ^7.6 || ^8.0",
        "psr/container": "^1.0",
        "laravel/lumen-framework": "^5.5 || ^8.1",
        "symfony/dependency-injection": "^4.4 || ^5.1.5",
        "symfony/cache": "^4.4 || ^5.1.5",
        "symfony/config": "^4.4 || ^5.1.5",
        "symfony/http-client": "^4.4 || ^5.1.5",
        "symfony/yaml": "^4.4 || ^5.1.5",
        "phpseclib/phpseclib": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyApiToken\\": "src",
            "EonX\\EasyApiToken\\Bridge\\Symfony\\": "src/Bridge/Symfony"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyApiToken\\Tests\\": "tests"
        }
    },
    "suggest": {
        "auth0/auth0-php": "To use the Auth0 JWT driver to decode/encode tokens",
        "firebase/php-jwt": "To use the Firebase JWT driver to decode/encode tokens"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.5-dev"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../packages/EasyUtils"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
