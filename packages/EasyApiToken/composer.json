{
    "name": "eonx-com/easy-api-token",
    "description": "Tools to handle API tokens like a pro",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "nette/utils": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.4",
        "ext-openssl": "^7.1",
        "firebase/php-jwt": "^5.0",
        "eonx-com/easy-psr7-factory": "^2.3.5",
        "auth0/auth0-php": "^5.4",
        "psr/container": "^1.0",
        "laravel/lumen-framework": "^5.5",
        "symfony/dependency-injection": "^4.2 || ^5.0",
        "symfony/config": "^4.2 || ^5.0",
        "symfony/yaml": "^4.2 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyApiToken\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyApiToken\\Tests\\": "tests"
        }
    },
    "suggest": {
        "auth0/auth0-php": "To use the Auth0 JWT driver to decode/encode tokens",
        "firebase/php-jwt": "To use the Firebase JWT driver to decode/encode tokens"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.4-dev"
        }
    }
}
