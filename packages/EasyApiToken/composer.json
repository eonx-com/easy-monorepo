{
    "name": "eonx-com/easy-api-token",
    "description": "Make your API accept multiple authentication strategies in a convenient way (Basic, ApiKey, JWT, ...)",
    "type": "symfony-bundle",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-openssl": "*",
        "nette/utils": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "firebase/php-jwt": "^5.0",
        "guzzlehttp/psr7": "^2.1",
        "eonx-com/easy-utils": "^4.3.15",
        "auth0/auth0-php": "^8.0",
        "psr/container": "^1.0",
        "laravel/lumen-framework": "^5.8 || ^6.0 || ^8.0",
        "symfony/dependency-injection": "^5.4 || ^6.0",
        "symfony/cache": "^5.4 || ^6.0",
        "symfony/config": "^5.4 || ^6.0",
        "symfony/http-client": "^5.4 || ^6.0",
        "symfony/security-bundle": "^5.4 || ^6.0",
        "symfony/yaml": "^5.4 || ^6.0",
        "phpseclib/phpseclib": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyApiToken\\": "src",
            "EonX\\EasyApiToken\\Bridge\\Symfony\\": "src/Bridge/Symfony"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyApiToken\\Tests\\": "tests"
        }
    },
    "suggest": {
        "auth0/auth0-php": "To use the Auth0 JWT driver to decode/encode tokens",
        "firebase/php-jwt": "To use the Amazon Cognito or the Firebase JWT driver to decode/encode tokens",
        "phpseclib/phpseclib": "To use the Amazon Cognito JWT driver to decode/encode tokens"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.4-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
