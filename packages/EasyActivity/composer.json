{
    "name": "eonx-com/easy-activity",
    "description": "Tracking your record changes.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "eonx-com/easy-random": "^4.4",
        "nesbot/carbon": "^2.67"
    },
    "require-dev": {
        "doctrine/annotations": "^1.14",
        "doctrine/dbal": "^2.13",
        "doctrine/orm": "^2.14",
        "eonx-com/easy-doctrine": "^4.4",
        "eonx-com/easy-lock": "^4.4",
        "phpunit/phpunit": "^9.6 || ^10.2",
        "ramsey/uuid": "^4.7",
        "symfony/symfony": "^6.3",
        "symfony/uid": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyActivity\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyActivity\\Tests\\": "tests"
        }
    },
    "suggest": {
        "symfony/serializer": "To serialize subject's data",
        "symfony/messenger": "To save log entities asynchronously",
        "eonx-com/easy-doctrine": "To create Log entries from to doctrine events",
        "eonx-com/easy-lock": "To lock async messages"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.4-dev"
        }
    }
}
