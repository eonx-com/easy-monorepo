{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {{ include('@EasyWebhook/icon/paper-plane-solid.svg') }}
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': profiler_url }) }}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label">
        <span class="icon">{{ include('@EasyWebhook/icon/paper-plane-solid.svg') }}</span>
        <strong>EasyWebhook</strong>
    </span>
{% endblock %}

{% block panel %}
    <div class="sf-tabs">
        <div class="tab {% if collector.results|length == 0 %}disabled{% endif %}">
            <h3 class="tab-title">Webhook Results</h3>
            <div class="tab-content">
                {% if collector.results %}
                    <table>
                        <thead>
                        <tr>
                            <th>Result</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for result in collector.results %}
                            <tr>
                                <td>
                                    {{ dump(result) }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="empty">
                        There is no webhook result.
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="tab {% if collector.middleware|length == 0 %}disabled{% endif %}">
            <h3 class="tab-title">Middleware</h3>
            <div class="tab-content">
                {% if collector.middleware %}
                    <table>
                        <thead>
                        <tr>
                            <th>Class</th>
                            <th>Priority</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for middleware in collector.middleware %}
                            {%- set link = middleware.filename|file_link(1) -%}

                            <tr>
                                <td>
                                    <a href="{{ link }}" title="{{ middleware.filename }}">{{ middleware.class }}</a>
                                </td>
                                <td>
                                    {{ middleware.priority }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="empty">
                        There is no webhook middleware.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
