{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {{ include('@EasyDecisionBundle/DataCollector/thinking.svg') }}
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': profiler_url }) }}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label">
        <span class="icon">{{ include('@EasyDecisionBundle/DataCollector/thinking.svg') }}</span>
        <strong>EasyDecision</strong>
    </span>
{% endblock %}

{% block panel %}
    <div class="sf-tabs">
        <div class="tab">
            <h3 class="tab-title">Decisions</h3>
            <div class="tab-content">
                {% if collector.decisions %}
                    {% for decision in collector.decisions %}
                        <h2>{{ decision.name }} <small>Decision Name</small></h2>
                        <h3>{{ decision.context.decision_type }} <small>Decision Type</small></h3>
                        <h3>Original Input</h3>
                        <div class="card">
                            {{ dump(decision.context.original_input) }}
                        </div>
                        <h3>Rule Outputs</h3>
                        <table>
                            <thead>
                            <tr>
                                <th>Rule Name</th>
                                <th>Output</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for name, output in decision.context.rule_output %}
                                <tr>
                                    <td>{{ name }}</td>
                                    <td>{{ dump(output) }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <h3>Configurators</h3>
                        <table>
                            <thead>
                            <tr>
                                <th>File Link</th>
                                <th>Priority</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for configurator in decision.configurators %}
                                {%- set link = configurator.filename|file_link(1) -%}
                                <tr>
                                    <td>
                                        <a href="{{ link }}"
                                           title="{{ configurator.filename }}">{{ configurator.class }}</a>
                                    </td>
                                    <td>
                                        {{ configurator.priority }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <br>
                        <hr>
                    {% endfor %}
                {% else %}
                    <div class="empty">
                        There is no output.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
