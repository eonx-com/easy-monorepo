{
    "name": "eonx-com/easy-encryption",
    "description": "Encryption made easy",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-sodium": "*",
        "eonx-com/easy-utils": "^6.17.5",
        "paragonie/halite": "^5.1",
        "symfony/config": "^7.2",
        "symfony/dependency-injection": "^7.2",
        "symfony/http-kernel": "^7.2"
    },
    "require-dev": {
        "aws/aws-sdk-php": "^3.288.1",
        "eonx-com/easy-test": "^6.17.5",
        "laravel/lumen-framework": "^11.0",
        "phpunit/phpunit": "^10.2|^11.4",
        "symfony/filesystem": "^7.2",
        "symfony/process": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyEncryption\\": "src",
            "EonX\\EasyEncryption\\Bundle\\": "bundle",
            "EonX\\EasyEncryption\\Laravel\\": "laravel"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyEncryption\\Tests\\": "tests",
            "EonX\\EasyEncryption\\Tests\\Unit\\": "tests/Unit/src",
            "EonX\\EasyEncryption\\Tests\\Unit\\Bundle\\": "tests/Unit/bundle",
            "EonX\\EasyEncryption\\Tests\\Unit\\Laravel\\": "tests/Unit/laravel"
        }
    },
    "suggest": {
        "aws/aws-sdk-php": "For AWS Cloud HSM support",
        "doctrine/collections": "For encrypting fields with EncryptableField attribute",
        "doctrine/orm": "For encrypting fields with EncryptableField attribute",
        "ext-pkcs11": "For AWS Cloud HSM support",
        "natepage/php-pkcs11-ide-helper": "For better IDE support when using PKCS11",
        "symfony/filesystem": "For AWS Cloud HSM support"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.18-dev"
        }
    }
}
