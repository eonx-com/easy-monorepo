{
    "name": "eonx-com/easy-encryption",
    "description": "Encryption made easy",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "eonx-com/easy-utils": "^4.4",
        "paragonie/halite": "^4.8 || ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "laravel/lumen-framework": "^9.0",
        "symfony/symfony": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyEncryption\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyEncryption\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "4.4-dev"
        }
    }
}
