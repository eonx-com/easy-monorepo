{
    "name": "eonx-com/easy-encryption",
    "description": "Encryption made easy",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "eonx-com/easy-utils": "5.0-dev",
        "paragonie/halite": "^5.1"
    },
    "require-dev": {
        "laravel/lumen-framework": "^9.1",
        "phpunit/phpunit": "^9.6 || ^10.2",
        "symfony/symfony": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyEncryption\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyEncryption\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-5.x": "5.0-dev"
        }
    }
}
