# Template for the database schema, used to produce, validate and publish CloudFormation templates from defined components
CfhighlanderComponent do
  
    Parameters do
      ComponentParam 'SchemaTag', 'latest'
      ComponentParam 'EnvironmentName', 'dev', isGlobal: true
      ComponentParam 'EnvironmentType', 'development', isGlobal: true, allowedValues: ['development','production']
    end
  
    Component name: '{{ project }}-schema-task', template: 'ecs-task', config: schema do
      Parameters do
        ComponentParam 'SqsUrl', type:'String'
      end
      parameter name: 'SchemaTag', value: Ref('SchemaTag')
    end
  
  end
