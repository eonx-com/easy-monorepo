version: '3.7'
services:

  api:
    volumes:
      - ./:/var/www:delegated
      - ./docker/api/development/php.ini:/usr/local/etc/php/conf.d/99-overrides.ini

  cron:
    volumes:
      - ./:/var/www:delegated

  nginx:
    volumes:
      - ./public:/var/www/public:delegated
      - ./docker/nginx/default-local.conf:/etc/nginx/conf.d/default.conf

  worker:
    volumes:
      - ./:/var/www:delegated
