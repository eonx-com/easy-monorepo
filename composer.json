{
    "name": "eonx-com/easy-monorepo",
    "type": "library",
    "description": "The packages to step the f*k up in your projects",
    "license": "MIT",
    "bin": [
        "packages/EasyCfhighlander/bin/easy-cfhighlander",
        "packages/EasyDocker/bin/easy-docker"
    ],
    "require": {
        "eonx-com/externals": "^1.0",
        "php": "^7.1",
        "eonx-com/utils": "^0.2",
        "ext-json": "*",
        "psr/event-dispatcher": "^1.0",
        "symfony/expression-language": "^4.2",
        "symfony/filesystem": "^4.2",
        "symfony/finder": "^4.2",
        "symfony/psr-http-message-bridge": "^1.1",
        "symplify/package-builder": "^6.1",
        "twig/twig": "^2.8",
        "zendframework/zend-diactoros": "^2.1"
    },
    "require-dev": {
        "auth0/auth0-php": "^5.4",
        "bugsnag/bugsnag": "^3.19",
        "bugsnag/bugsnag-laravel": "^2.17",
        "doctrine/orm": "^2.6",
        "eonx-com/test-utils": "^0.0.1",
        "ext-openssl": "^7.1",
        "firebase/php-jwt": "^5.0",
        "laravel-doctrine/orm": "^1.4",
        "laravel/lumen-framework": "^5.5",
        "mikey179/vfsstream": "~1",
        "mockery/mockery": "^1.2",
        "phpspec/prophecy": "~1.0",
        "phpunit/phpunit": "^8.4",
        "psr/container": "^1.0",
        "symfony/symfony": "^4.2",
        "vlucas/phpdotenv": "^3.3",
        "symplify/monorepo-builder": "^6.1",
        "symplify/changelog-linker": "^6.1",
        "natepage/sniffs": "^1.1",
        "phpstan/phpstan": "^0.11.5",
        "sensiolabs/security-checker": "^5.0",
        "symplify/easy-coding-standard": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyApiToken\\": "packages/EasyApiToken/src",
            "EonX\\EasyCfhighlander\\": "packages/EasyCfhighlander/src",
            "EonX\\EasyCore\\": "packages/EasyCore/src",
            "EonX\\EasyDecision\\": "packages/EasyDecision/src",
            "EonX\\EasyDocker\\": "packages/EasyDocker/src",
            "EonX\\EasyEntityChange\\": "packages/EasyEntityChange/src",
            "EonX\\EasyIdentity\\": "packages/EasyIdentity/src",
            "EonX\\EasyLogging\\": "packages/EasyLogging/src",
            "EonX\\EasyPagination\\": "packages/EasyPagination/src",
            "EonX\\EasyPipeline\\": "packages/EasyPipeline/src",
            "EonX\\EasyPsr7Factory\\": "packages/EasyPsr7Factory/src",
            "EonX\\EasyRepository\\": "packages/EasyRepository/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyApiToken\\Tests\\": "packages/EasyApiToken/tests",
            "EonX\\EasyCfhighlander\\Tests\\": "packages/EasyCfhighlander/tests",
            "EonX\\EasyCore\\Tests\\": "packages/EasyCore/tests",
            "EonX\\EasyDecision\\Tests\\": "packages/EasyDecision/tests",
            "EonX\\EasyDocker\\Tests\\": "packages/EasyDocker/tests",
            "EonX\\EasyEntityChange\\Tests\\": "packages/EasyEntityChange/tests",
            "EonX\\EasyIdentity\\Tests\\": "packages/EasyIdentity/tests",
            "EonX\\EasyLogging\\Tests\\": "packages/EasyLogging/tests",
            "EonX\\EasyPagination\\Tests\\": "packages/EasyPagination/tests",
            "EonX\\EasyPipeline\\Tests\\": "packages/EasyPipeline/tests",
            "EonX\\EasyPsr7Factory\\Tests\\": "packages/EasyPsr7Factory/tests",
            "EonX\\EasyRepository\\Tests\\": "packages/EasyRepository/tests"
        }
    },
    "replace": {
        "eonx-com/easy-api-token": "self.version",
        "eonx-com/easy-repository": "self.version",
        "eonx-com/easy-pagination": "self.version",
        "eonx-com/easy-psr7-factory": "self.version",
        "eonx-com/easy-pipeline": "self.version",
        "eonx-com/easy-identity": "self.version",
        "eonx-com/easy-decision": "self.version",
        "eonx-com/easy-cfhighlander": "self.version",
        "eonx-com/easy-docker": "self.version",
        "eonx-com/easy-core": "self.version",
        "eonx-com/easy-entity-change": "self.version",
        "eonx-com/easy-logging": "self.version"
    },
    "scripts": {
        "check-all": [
            "@check-ecs",
            "@check-phpstan",
            "@check-security",
            "@check-tests"
        ],
        "check-ecs": "vendor/bin/ecs check packages",
        "check-phpstan": "vendor/bin/phpstan analyse packages --level=7 --ansi",
        "check-security": "vendor/bin/security-checker security:check",
        "check-tests": "vendor/bin/phpunit packages",
        "changelog": [
            "vendor/bin/changelog-linker dump-merges --in-packages",
            "vendor/bin/changelog-linker link",
            "vendor/bin/changelog-linker cleanup"
        ],
        "merge": "vendor/bin/monorepo-builder merge",
        "propagate": "vendor/bin/monorepo-builder propagate",
        "split": "vendor/bin/monorepo-builder split",
        "validate-repo": "vendor/bin/monorepo-builder validate"
    },
    "suggest": {
        "auth0/auth0-php": "To use the Auth0 implementation to handle your users identity",
        "doctrine/orm": "To use the Doctrine ORM implementation",
        "eonx-com/easy-pagination": "To use pagination within your repositories",
        "firebase/php-jwt": "To use the Firebase JWT driver to decode/encode tokens",
        "illuminate/database": "To use the Illuminate Eloquent implementation",
        "illuminate/pipeline": "To use the Illuminate Pipeline implementation"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
